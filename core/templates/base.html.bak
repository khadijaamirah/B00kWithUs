<!doctype html>
<html>
<head><meta charset="utf-8"><title>SecureMS</title></head>
<body>
  {% if messages %}
    <ul>
      {% for m in messages %}
        <li>{{ m|escape }}</li>
      {% endfor %}
    </ul>
  {% endif %}
  {% if user.is_authenticated %}
    <p>Logged in as {{ user.username|escape }} | <a href="{% url 'logout' %}">Logout</a></p>
  {% else %}
    <p><a href="{% url 'login' %}">Login</a> | <a href="{% url 'register' %}">Register</a></p>
  {% endif %}
  {% block content %}{% endblock %}
</body>
</html>
